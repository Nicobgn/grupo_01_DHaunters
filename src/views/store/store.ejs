<%- include("../partials/head") %> 
<%- include("../partials/header") %>

<main class="marketplace">
  <section class="product-list">
    <div class="product-section-title">
      <h2>Lista de productos</h2>
    </div>
    <% if (locals.products && products.length > 0) { %>
      
      <% for (let product of products) {%>
        
    <div class="container__product">
      <a href="/store/<%= product.name %>" class="product__card">

      <article class="product">
        <figure>
          <img src="/img/products/<%=product.image%>" alt="" />
        </figure>
        <div class="product__detail">
          <h3 class="product__detail__name">
            <%= product.name %>
          </h3>
          <p class="product__detail__description">
            <%= product.universe %>
          </p>
          <div class="product__detail__buttons">
            <span class="product__detail__price">
              <%= product.price %>
            </span>
            <div class="cart__buttons">
              <span class="cart__button cart__button_add">
                Agregar
              </span>
              <span class="cart__button cart__button_remove hidden">
                Sacar
              </span>
            </div>
          </div>
        </div>
      </article>
      </a>
    </div>
      
        <% } %>
      
    <% } else { %>
      <p>AÃºn no se registraron productos, o no fueron encontrados</p>
    <% } %> 
  </section>

</main>

<%- include("../partials/footer") %>
