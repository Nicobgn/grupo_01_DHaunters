<%- include("../partials/head") %>
<%- include("../partials/header") %>

<main>
	<section class="cart">
		<article class="cart__header">
			<span>Productos</span>
			<span id="cleanCart" class="remove">Vaciar Carrito</span>
		</article>
		<hr>

		<% if (locals.products) { %>
			<article class="cartItems">
				<% products.forEach(product => { %>
					<div class="cartItem">
						<a href="/store/<%= product.name %>">
							<figure>
								<img src="/img/products/<%= product.image %> " alt="<%= product.title %> ">
							</figure>
						</a>
						<div class="itemDesc">
							<div class="detailLeft">
								<a href="/store/<%= product.name %>">
									<h3> <%= product.title %> </h3>
								</a>
							</div>
							<div class="counter">
								<span class="btn">-</span>
								<span class="counter">2</span>
								<span class="btn">+</span>
							</div>
							<div class="detailRight">
								<h4> USD <%= product.price %> </h4>
								<p class="later">Comprar m√°s tarde</p>
								<p class="remove">Quitar del carrito</p>
							</div>
						</div>
					</div>
				<% }) %>
			</article>
			<hr>
			<% } else { %>
				
			<% } %> 
			<article class="checkout">
				<div class="total">
					<div class="subtotal">
						<p>Subtotal</p>
						<h6>Items <%= length %></h6>
					</div>
					<h4>USD 155</h4>
					<button type="submit">Comprar</button>
				</div>
			</article>
	</section>
</main>
<%- include("../partials/footer") %>