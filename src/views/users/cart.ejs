<%- include("../partials/head") %>
<%- include("../partials/header") %>

<main>
	<section class="cart">
		<article class="cart__header">
			<span>Productos</span>
			<span id="cleanCart" class="remove">Vaciar Carrito</span>
		</article>
		<hr>

		<% if (locals.products) { %>
			<article class="cart__items">
				<% products.forEach(product => { %>
					<div class="cart__item">
						<figure class="cart__item__image">
							<a href="/store/<%= product.name %>">
								<img src="/img/products/<%= product.image %> " alt="<%= product.title %> ">
							</a>
						</figure>
						<div class="cart__item__caption">
							<div class="cart__item__caption_left">
								<a href="/store/<%= product.name %>">
									<span> <%= product.name %> </span>
								</a>
							</div>
							<div class="cart__item__caption_right">
								<div class="cart__item__counter">
									<input 
									type="number" 
									class="cart__item__counter"
									id="cart__item__counter-<%= product.product_id %>"
									value="1"
									>
									<div class="cart__item__counter__buttons">
										<p 
										id="cart__item__plus-<%= product.product_id %>"
										class="cart__item__button"
										> + </p>
										<p 
										id="cart__item__minus-<%= product.product_id %>"
										class="cart__item__button"
										> - </p>
									</div>
								</div>
								<div>
									<p 
									class="cart__item__price"
									> 
										USD <%= product.price %> 
									</p>
									<p 
									id="cart__remove-<%= product.product_id %>"
									class="cart__remove"
									>
										Quitar del carrito
									</p>
								</div>
							</div>
						</div>
					</div>
					<hr class="product-divider">
				<% }) %>
			</article>
			<hr>
			<% } else { %>
				
			<% } %> 
			<article class="checkout">
				<div class="total">
					<div class="subtotal">
						<p>Subtotal</p>
						<h6>Items <%= length %></h6>
					</div>
					<h4>USD 155</h4>
					<button type="submit">Comprar</button>
				</div>
			</article>
	</section>
</main>
<%- include("../partials/footer") %>