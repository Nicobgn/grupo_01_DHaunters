<%- include("../partials/head") %>
    <header>
      <div class="contenedor">
        <div class="logo">
          <a href="/">
            <img src="/img/ghost-logo.png" alt="logo">
          </a>
        </div>
        <p class="login"><a href="/user/login">Iniciar sesión</a></p>
      </div>
    </header>
    <main>
      <div class="icono"><i class="fa-solid fa-circle-user"></i></div>
      <form action="/user/register" method="POST">
        <h3>Información del usuario</h3>

        <div class="datos-u">
          <input type="text" name="first_name" placeholder="Nombres" id="first_name" class="drawer" minlength="4" required />
          <input type="text" name="last_name" placeholder="Apellidos" id="last_name" class="drawer" minlength="4"
            required />

          <input type="text" name="user_name" placeholder="Nombre de usuario" id="user_name" class="drawer"
            minlength="4" required />
          <input type="text" name="email" placeholder="E-mail" id="email" class="drawer" required />
          <input type="text" name="adress" placeholder="Dirección" id="adress" class="drawer" required />
          <input type="password" name="password" placeholder="Contraseña" id="password" class="drawer" minlength="8"
            required />
          <input type="password"  placeholder="Confirmar contraseña" 
            class="drawer" minlength="8" required />
        </div>

        <div class="checkbox">
          <label><input type="checkbox" value="comprador"  required />
            Acepto términos y condiciones</label>
          <label><input type="checkbox" 
              value=" vendedor"  />
            Quiero recibir promociones en mi correo</label>
        </div>
        <button type="submit"  value="submit" class="registrarse">
          <a href="/"></a>Registrarse
        </button>
      </form>
    </main>
  </body>

</html>