<%- include("../partials/head") %>
  <header>
    <div class="contenedor">
      <div class="logo">
        <a href="/">
          <img src="/img/brand/ghost-logo.svg" alt="logo">
        </a>
      </div>
      <p class="signup"><a href="/user/register"> Sign up</a></p>
    </div>
  </header>
  <main>
    <div class="icono"><i class="fa-solid fa-circle-user"></i></div>
    <form action="/user/login" method="POST">
      <div>
        <input type="text" name="login_key" placeholder="Nombre de usuario o email" id="login_key" class="drawer"/>
        <div class="error-msg oculto login_key">El usuario o correo no es valido </div>
        
        <% if (locals.errors && errors.login_key) { %>
          <div class="error-msg" id="error-user">
            <%= errors.login_key.msg %>           
          </div> 
          <% } %>
        <input type="password" name="password" placeholder="Contraseña" id="password" class="drawer"  />
              <% if (locals.errors && errors.password) { %>
          <div class="error-msg">
            <%= errors.password.msg %>           
          </div> 
          <% } %>
          
      </div>
       <div class="error-msg oculto" id="error-msg">Debes completar todos los campos</div>    

      <button type="submit" name="send" value="submit" id="send" class="registrarse">
      Iniciar sesión
      </button>
      
      <div class="checkbox">
        <label>
          <input type="checkbox" name="rememberMe" id="rememberMe" />
          Recuerdame
        </label>
        <p> <a href="#">¿Has olvidado tu contraseña?</a></p>
      </div> 
    </form>
   
   
  </main>
  <script src="/js/validations/loginValidation.js"></script>
  </body>

  </html>