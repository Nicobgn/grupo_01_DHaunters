<%- include("partials/head") %>
	<%- include("partials/header") %>
		<% let prev=(a)=>{a--}
			let next=(a)=>{a++}
			%>

			<main>
				<section class="banner">
					<ul class="bannerSlider">
						<% banner.forEach(banner=> { %>
							<li id="bannerSlider<%= banner.id %>">
								<img src="<%= banner.img %>" alt="<%= banner.title %>">
								<!-- <div class="btnHolder">
						<div class="btn">
							<a href="#bannerSlider<%= prev(banner.id) %> "><i class="fa-solid fa-chevron-left"></i></a>
						</div>
						<div class="btn right">
							<a href="#bannerSlider<%= next(banner.id) %> "><i class="fa-solid fa-chevron-right"></i></a>
						</div> 
					</div> -->
							</li>
							<% }) %>
					</ul>
					<ul class="bannerMenu">
						<% banner.forEach(banner=> { %>
							<li class="bannerItem">
								<a href="#bannerSlider<%= banner.id %>">
									<!-- <i class="fa-solid fa-circle-notch"></i> -->
								</a>
							</li>
							<% }) %>
					</ul>
				</section>



				<section class="product-list">
					<div class="product-section-title">
						<h2>New on sale</h2>
					</div>

					<% for (let product of products) {%>


						<% if(product.category=="Epic" ){%>




							<div class="containerProduct">
								<a href="/store/productDetails/<%=product.id%>">

									<article class="product">
										<figure>
											<img src="/img/products/<%=product.img%>" alt="" />
										</figure>
										<div class="productDetail">
											<h3>
												<%= product.name %>
											</h3>
											<p class="product-description">
												<%= product.universe %>
											</p>
											<h4 class="price">
												<%= product.price %>
											</h4>
										</div>
									</article>
								</a>
							</div>
